#!/bin/bash

#This script initialize some GPIOs as output. If they were already initialized, then nothing is done.


if [ ! -d /sys/class/gpio/gpio23 ] && [ ! -d /sys/class/gpio/gpio24 ] && [ ! -d /sys/class/gpio/gpio25 ] && [ ! -d /sys/class/gpio/gpio26 ] && [ ! -d /sys/class/gpio/gpio27 ]; then

sudo echo "23" > /sys/class/gpio/export
sudo echo "24" > /sys/class/gpio/export
sudo echo "25" > /sys/class/gpio/export
sudo echo "26" > /sys/class/gpio/export
sudo echo "27" > /sys/class/gpio/export

sudo echo "out" > /sys/class/gpio/gpio23/direction
sudo echo "out" > /sys/class/gpio/gpio24/direction
sudo echo "out" > /sys/class/gpio/gpio25/direction
sudo echo "out" > /sys/class/gpio/gpio26/direction
sudo echo "out" > /sys/class/gpio/gpio27/direction


fi
