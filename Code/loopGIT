#!/bin/bash

folder=$1
file_name=git_logs

while true; do



	sleep 5


	#log purposes
	date --iso-8601=ns >> /home/upboard/Desktop/UpBoard-Code-and-Results/Results/"$folder"/"$file_name"
	echo "Starting GIT" >> /home/upboard/Desktop/UpBoard-Code-and-Results/Results/"$folder"/"$file_name"

	sudo /home/upboard/Desktop/UpBoard-Code-and-Results/push_GIT_UpBoard $folder

	#log purposes
	date --iso-8601=ns >> /home/upboard/Desktop/UpBoard-Code-and-Results/Results/"$folder"/"$file_name"
	echo "Finishing GIT" >> /home/upboard/Desktop/UpBoard-Code-and-Results/Results/"$folder"/"$file_name"

done
